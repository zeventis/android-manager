<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackgroundGrey">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:elevation="6dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/itemEventBannerV"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:alpha="0.3"
                android:background="@android:color/darker_gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/itemEventDayV"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@color/backgroundShimmer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/itemEventDayExtendedV"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginTop="2dp"
                android:background="@color/backgroundShimmer"
                app:layout_constraintEnd_toEndOf="@id/itemEventDayV"
                app:layout_constraintStart_toStartOf="@id/itemEventDayV"
                app:layout_constraintTop_toBottomOf="@id/itemEventDayV" />

            <View
                android:id="@+id/itemEventNameV"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:background="@color/backgroundShimmer"
                app:layout_constraintEnd_toStartOf="@id/itemEventHourV"
                app:layout_constraintStart_toEndOf="@id/itemEventDayExtendedV"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/itemEventHourV"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="24dp"
                android:background="@color/backgroundShimmer"
                app:layout_constraintBottom_toBottomOf="@+id/itemEventNameV"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/itemEventNameV"
                app:layout_constraintTop_toTopOf="@+id/itemEventNameV" />

            <View
                android:id="@+id/itemEventPromotersNumberLabelV"
                android:layout_width="220dp"
                android:layout_height="15dp"
                android:layout_marginTop="4dp"
                android:background="@color/backgroundShimmer"
                app:layout_constraintStart_toStartOf="@id/itemEventNameV"
                app:layout_constraintTop_toBottomOf="@id/itemEventNameV" />

            <View
                android:id="@+id/itemEventCoastLabelV"
                android:layout_width="210dp"
                android:layout_height="15dp"
                android:layout_marginTop="2dp"
                android:background="@color/backgroundShimmer"
                app:layout_constraintStart_toStartOf="@id/itemEventNameV"
                app:layout_constraintTop_toBottomOf="@id/itemEventPromotersNumberLabelV" />

            <View
                android:id="@+id/itemEventProgressCampaignTitleV"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/backgroundShimmer"
                app:layout_constraintStart_toStartOf="@id/itemEventProgressCampaignPb"
                app:layout_constraintTop_toBottomOf="@id/itemEventCoastLabelV" />

            <View
                android:id="@+id/itemEventProgressCampaignPb"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="8dp"
                android:background="@color/backgroundShimmer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/itemEventProgressCampaignTitleV"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>